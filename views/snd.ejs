                        <td id="description"><%= weather %></td>
                        <td id="location"><%= loc %></td>
                    </tr>
                </table>
            </div>
        </div>
        
        <div class="split right">
            <div class="centered"> <!--크롤링위한 id 생성 완료-->
                <div id="closet">
                    <% for(let value of clothe_info){ %>
                        <button>
                            <%= value %>
                        </button>
                    <% } %>
                </div>
                <h2 id="brand">brand</h2>
                <h2 id="name">name</h2>
                <h2 id="price">price</h2>
                <h2 id="pic">pic</h2>
            </div>
        </div>
    </body>

