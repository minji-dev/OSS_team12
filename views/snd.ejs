<!DOCTYPE html>
<html>
    <head>
        <!--Requiredmetatags-->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--BootstrapCSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <!--Custom CSS Style-->
        <link rel="stylesheet" href="css/style.css">
        <title>Home</title>
    </head>
    
    <!--HTMLCode-->
    <body>
        <div class="split left">
            <div class="weather">
                <div class="card bg-image" style="width: 12cm;">
                    <img class="card-img" src="../sky.jpg" alt="weather" />
                    <div class="text-black">
                        <h4 class="center-left-0" id="location"><i class="bi bi-pin"></i> City: <%= loc %></h4>
                        <h4 class="center-left-1" id="temperature"><i class="bi bi-thermometer"></i> Temperature: <%= temp %></h4>
                        <p class="center-left-2" id="description"><i class="bi bi-cloud-sun"></i> Weather: <%= weather %></p>
                        <p class="center-left-3" id="air"><i class="bi bi-cloud-fog2"></i> Fine Dust: <%= air %></p>
                    </div>
                </div>
            </div>
            <div class="recommendation">
                <h2>추천 옷: <% for(let value of clothe_info){ %>
                    <%= value %>
                    <% } %>
                </h2>
            </div>
        </div>
        
        <div class="split right">
            <div class="centered"> <!--크롤링위한 id 생성 완료-->
                <div id="closet">
                    <% for(let value of clothe_info){ %>
                        <button class="clothe_button">
                            <%= value %>
                        </button>
                    <% } %>
                </div>
                <h2 id="brand">brand</h2>
                <h2 id="name">name</h2>
                <h2 id="price">price</h2>
                <h2 id="pic">pic</h2>
            </div>
        </div>
    </body>

    <script>
        const closet=document.getElementById("closet");
        const brand=document.getElementById("brand");
        const name=document.getElementById("name");
        const price=document.getElementById("price");
        const pic=document.getElementById("pic");
        let closet_type;
        
        
        //클릭한 버튼의 옷종류이름가져오기
        closet.addEventListener('click',(e)=>{
            
            //자식노드 없는지 확인
            while(brand.firstChild){
                brand.removeChild(brand.firstChild);
            }
            while(name.firstChild){
                name.removeChild(name.firstChild);
            }
            while(price.firstChild){
                price.removeChild(price.firstChild);
            }
            while(pic.firstChild){
                pic.removeChild(pic.firstChild);
            }
            closet_type=e.target.innerText;
            let url='http://localhost:3000/musinsa?type='+closet_type;
            fetch(url,{
                method:'GET',
            })
            .then(response=>response.json())
            .then(data=>{
                const _brand=document.createElement("div");
                const _name=document.createElement("div");
                const _price=document.createElement("div");
                const _pic=document.createElement("img");
                _brand.textContent=data.brand;
                _name.textContent=data.name;
                _price.textContent=data.price;
                _pic.src=data.photo;
                brand.appendChild(_brand);
                name.appendChild(_name);
                price.appendChild(_price);
                pic.appendChild(_pic);
            })
            .catch(error=>console.log(error));
        })
    </script>
</html>