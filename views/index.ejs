        <title>Moipji</title>
    </head>

    <!--HTMLCode-->
    <body>
        <div class="all">
            <div class="logo">
                <img src="img/logo.jpg" width="500px">
            </div>
            <div class="btn">
                <button class="button-17" id="snd" onclick="gotoMain();">
                    START
                </button>
            </div>
        </div>
    </body>

    <script>
        function getWeather() {
            navigator.geolocation.getCurrentPosition(success, error);
            
            function success(position) {
                const latitude = position.coords.latitude;
                const longitude = position.coords.longitude;

                let url = 'http://localhost:3000/location?lat='+latitude+'&lon='+longitude;
                fetch(url, {
                    method: 'GET',
                })
                .then((response) => {
                    if(response.status === 200) {
                        console.log(response.status);
                        document.getElementById("snd").style.display = "block";
                    }
                });
            }

            function error() {
                location.innerHTML = "Unable to retrieve your location";
            }
        }
        
        function gotoMain() {
            let url = 'http://localhost:3000/main';
            location.href = url;
        }

        getWeather();
    </script>
</html>